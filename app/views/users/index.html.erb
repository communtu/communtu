<span class="headline"><%=t(:view_users_index_0)%></span>
<%= render_flash %>
<div class="user_search">
  <%=form_tag("/users/search", :method => "post") %>
  <%=text_field_tag(:login)%><%= submit_tag t(:search) %>
</div>
<div class="inner1">
  <p><%=t(:view_users_index_1)%><%= @u.length %><%=t(:view_users_index_2)%></p>
<table cellpadding="3">
  <tr>
    <th align="left"><%=t(:username)%></th>
    <th align="left"><%=t(:email_without_colon)%></th>
    <th align="left"><%=t(:view_users_index_5)%></th>
    <th align="left"><%=t(:view_users_index_6)%></th>
  </tr>
  <tr><td colspan="4"><hr /></td></tr>
    <%= render :partial => 'user', :collection => @users, :window_size => 10 %>
</table>
<%= will_paginate @users %>
</div>
