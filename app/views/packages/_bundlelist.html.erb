<div class="ubuntupackets">
<div class="editorh1">
<%=t(:packages_for_ubuntu)%>
</div>
<p></p>
<%= form_tag('/packages/search_bundle', :method => "post") %>
<br />
<table border="0">
<tr>
<td valign="left"><%=link_to(t(:package_list),"/packages")%></td>
<td></td></tr>
