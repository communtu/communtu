<h2><%=t(:new_message)%></h2>

<%= render_flash %>

<%=form_tag("/sent")%>
  <div><%=t(:to_colon)%> 
       <%= text_field :message, :to, 
                      :data => { :remote => true, 
                                 :url => url_for(:controller => "sent", 
                                                 :action => :update_user_exists,
                                                 :with => 'Form.Element.serialize(this)') } %>
	   <label id="user_exists"></label>
  </div>
  <p><%=t(:subject_with_colon)%><%= text_field :message,:subject %></p>
  <p><%=t(:view_sent_new_3)%><br /> <%= text_area :message,:body %></p>
  <p><%= submit_tag t(:senden) %></p>
</form>

<%= link_to t(:back), session[:backlink] %>

