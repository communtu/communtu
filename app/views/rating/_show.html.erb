<% @convert = %w[one two three four five] %>
<ul class="star-rating" 
    title="<%= metapackage.ratings_count == 0 ? 
    	t(:view_rating_show_title_no_ratings) : 
    	"#{number_with_precision(metapackage.average_rating, :precision => 2)} 
    	 #{t(:view_rating_show_title_got_ratings)} 
    	 #{t(:view_rating_show_title_ratings_count, 
    	 {:votes=>metapackage.ratings_count})}" %>">
    <li class="current-rating" style="width:<%=  metapackage.average_rating*25 %>px"></li>
</ul>